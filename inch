using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace atvaltas
{
    class Program
    {
        static void Main(string[] args)
        {
            double szam;
            string szoveg;
            Console.WriteLine("Kérem az átváltani kívánt számot :");
            szam = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Kérem adja meg a  mértékegységeket, hogy inch-ic vagy cm_ci");
            szoveg = Console.ReadLine();
            if (szoveg == "ic")
            {
                Console.WriteLine("{0} inch = {1}cm", szam, szam * 2.54);


            }
            else 
            {
                if (szoveg == "ci")
                    Console.WriteLine("{0} cm = {1} inch ");

            }
            Console.ReadLine();
        }
    }
}
